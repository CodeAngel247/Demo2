<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="650">

    <Window.Resources>
        <CollectionViewSource x:Key="ItemCollectionViewSource" CollectionViewType="ListCollectionView"/>
    </Window.Resources>
    
    
    <Grid>


        <DataGrid Width="300" Height="300"   HorizontalAlignment="Right" Margin="25, 25, 25, 25" Name="MyGrid" AutoGenerateColumns="False" ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="cID" Binding="{Binding ID}" Header="ID" />
                <DataGridTextColumn x:Name="cName" Binding="{Binding Title}" Header="Title" />
                <DataGridTextColumn x:Name="cDescription" Binding="{Binding ViewCount}" Header="ViewCount" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
